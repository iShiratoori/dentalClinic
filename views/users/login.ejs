<% layout('layouts/boilerplate')%>

<div class="container d-flex justify-content-center align-items-center vh-100 bg-dark">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-xl-5 offset-xl-3">
      <div class="card shadow">
        <img src="https://res.cloudinary.com/dm7zftkof/image/upload/v1687526886/dentalClinic/utils/photo-1609840114035-3c981b782dfe_kasnyz.webp" alt="" class="card-img-top" />
        <div class="card-body">
          <h5 class="card-title">Login</h5>
          <form action="/login" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
              <label class="form-label" for="username">Username</label>
              <input class="form-control" type="text" id="username" name="username" autofocus required>
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="password">Password</label>
              <input class="form-control" type="password" id="password" name="password" required>
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
            <div class="d-grid">
              <button class="btn btn-success">Login</button>
              <span>Or <a href="/register"><strong>regsiter</strong></a></span>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>