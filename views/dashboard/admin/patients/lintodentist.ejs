<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-4 offset-3">
    <div class="mt-3">
      <h1 class="title text-center">Linking Patient to Dentist</h1>
    </div>
    <div class="mt-5">
      <form class="validated-form" action="/admin/dashboard/patients/<%=patient._id%>/linktodentist" method="POST" novalidate>
        <div class="mb-3">
          <label class="form-label" for="name">Enter Dentist Id</label>
          <input class="form-control" type="text" name="dentist[dentistId]" id="name" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3 d-flex justify-content-center">
          <button class="btn btn-success">Link</button>
        </div>
      </form>
    </div>
  </div>
</div>