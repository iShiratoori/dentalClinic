<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/bootstrap-icons.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="/css/app-saas.min.css">
  <link rel="stylesheet" href="https://unpkg.com/@webpixels/css@1.1.5/dist/index.css">
  <link rel="stylesheet" href="/css/multi-select-tag.css">
  <link rel="stylesheet" href="/css/dashboard.css">
  <title>Boilerplate title</title>
</head>

<body class="light">
  <!-- SIDEBAR -->
  <div class="wrapper">
    <% if(currentUser){ %>

    <section id="sidebar">
      <%- include('../partials/sidebars/' + currentUser.getDirectory) %>
    </section>
    <!-- SIDEBAR -->
    <!-- NAVBAR -->
    <section id="content">
      <!-- NAVBAR -->
      <nav class="">
        <i class='bi bi-list fs-4 toggle-sidebar'></i>
        <div class="d-flex flex-row ms-auto">
          <div class="me-5 mt-1">
            <button class="btn  " id="daynight"><i class="bi bi-cloud-sun fs-3"></i></button>
          </div>
          <div class="me-5">
            <a href="#" class="nav-link ">
              <div class="d-flex flex-column">
                <span class="time"><strong><%=dateAndTime.getTime() %></strong></span>
                <span class="date"><%=dateAndTime.getFulldate() %></span>
              </div>
            </a>
          </div>
          <div class="pt-1 pe-4">
            <div class="row pt-3">
              <div class="col-auto pe-0">
                <a href="#" class="nav-link " id="notificationBell">
                  <i class="bi bi-bell"></i>
                  <span class="badge">5</span>
                </a>
                <div class="d-none d-sm-block ">
                  <div id="notification" class="position-md-absolute me-5 pe-5 me-5 d-none">
                    <div class="card border-0 rounded-5 shadow-5 ">
                      <div class="card-header">
                        <div class="row justify-content-between">
                          <div class="col-auto">Notification</div>
                          <div class="col-auto">Mark all as read</div>
                        </div>
                      </div>
                      <div class="card-body">
                        <div class="row">
                          <div class="col-3 d-flex align-items-center">
                            <div class="mx-auto">
                              <img src="<%=currentUser.image.url %>" class="avatar avatar-lg rounded-circle">
                            </div>
                          </div>
                          <div class="col-9">
                            <div class="row">
                              <div class="col-auto">
                                <p> <span class="fw-bold"><%=currentUser.username %></span>: <span class="text-muted">Lorem ipsum dolor sit amet consectetur...</span></p>
                              </div>
                              <div class="col-auto">
                                <span class="avatar-sm fw-bold">12s ago</span>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-auto pt-3">
                <span class="divider"></span>
              </div>
              <div class="col-auto ps-0">
                <a href="#" class="nav-link " id="messagesIcon">
                  <i class="bi bi-chat-dots"></i>
                  <span class="badge">8</span>
                </a>
              </div>
            </div>
          </div>
          <div class="p-1 pt-3">
            <div class="profile">
              <img src="<%=currentUser.image.url%>" alt="">
              <ul class="profile-link">
                <li><a href="#"><i class='bx bxs-user-circle icon'></i> Profile</a></li>
                <li><a href="#"><i class='bx bxs-cog'></i> Settings</a></li>
                <li><a href="/logout" class="btn btn-outline-danger border-0"><i class="bi bi-box-arrow-in-left"></i>Logout</a></li>
              </ul>
            </div>
          </div>
        </div>
      </nav>
      <!-- NAVBAR -->
      <!-- MAIN -->
      <main>
        <%-include('../partials/flash') %>
        <%- include('../partials/directory') %>
        <%-body %>
      </main>
      <!-- MAIN -->
    </section>
    <% if(currentUser) {%>
    <div class="toast-container" aria-live="polite" aria-atomic="true" data-type="message-container">
      <div class="toast fade" data-autohide="false" data-delay="5000" data-type="messages" aria-atomic="true" id="toast">
        <div id="messages">
        </div>
      </div>
      <!-- display message here -->
    </div>
    <% } %>
    <% } else { %>
    <%-body %>
    <% } %>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
  <script src="/js/dashboard.js">

  </script>
  <script src="/js/validateForms.js"></script>
</body>

</html>